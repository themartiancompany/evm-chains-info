_bin="$(
  dirname \
    "$(command \
         -v \
         "env")")"
_lib="$(
  realpath \
    "${_bin}/../lib")"
_crash_bash="${_lib}/libcrash-bash/crash-bash"
_sourced \
  "${_crash_bash}" 2>"/dev/null" || \
source \
  "${_crash_bash}"

# shellcheck disable=SC2034
_global_variables() {
  argument_required=""
  get_date=""
  input_type=""
  output_type=""
  retrieval_mode=""
  user_level=""
  db_paths=()
  selection_method=""
  api_key=""
  target_chain=""
  networks_all=""
  color=""
  quiet=""
}

_requirements() {
  _check_cmd \
    "jq"
  # _check_cmd \
  #   'evm-contract-call' \
  #   'evm-contract-tools'
  _check_cmd \
    "shuf" \
    "coreutils"
}

_db_path_check() {
  local \
    _db="${1}" \
    _msg=()
  if [[ ! -e "${_db}" ]]; then
    _msg=(
      "Database at"
      "${_db} does not exist."
    )
    _msg_error \
      "${_msg[*]}" \
      0
  fi
}

_dequote() {
  _string="${1}"
  echo \
    "${_string:1:-1}"
}

_filter_by_get() {
 local \
   _key="${1}" \
   _value="${2}"
  _filter=(
    ".[] |"
      "select("
        ".${_key} == ${_value} )"
  )
  echo \
    "${_filter[*]}"
}

_all_get() {
 local \
   _filter_output_type="${1}"
  _filter=(
    ".[].${_filter_output_type}"
  )
  echo \
    "${_filter[*]}"
}

_filter_get() {
  local \
    _key="${1}" \
    _value="${2}" \
    _output_type="${3}"
  echo \
    "$(_filter_by_get \
         "${_key}" \
         "${_value}").${_output_type}"
}

_filter_rpc_no_api_key_get() {
  local \
    _filter=()
  _filter=(
      ".[] |"
        "select("
          "contains("
            "\"API_KEY\" ) |"
            "not)"
  )
  echo \
    "${_filter[*]}"
}

_rpc_filter_api_key() {
  local \
    _rpcs_string="${1}" \
    _api_key="${2}" \
    _filter
  if [[ "${_api_key}" == "y" ]]; then
    _rpcs=( $( \
      echo \
        "${_rpcs_string}" |
        jq \
          -c \
          ".[]")
    )
  elif [[ "${_api_key}" == "n" ]]; then
    _filter="$(
      _filter_rpc_no_api_key_get)"
    readarray -t _rpcs <<< "$(
      echo \
        "${_rpcs_string}" |
        jq \
          -c \
          "${_filter}")"
  fi
}

_select() {
  local \
    _selection_method="${1}" \
    _result \
    _selection_results=() \
    _index \
    _length
  shift \
    1
  _selection_results=(
    "$@"
  )
  if [[ "${_selection_method}" == "kirsh" ]]; then
    _length="${#_selection_results[@]}"
    if (( 0 < "${_length}" )); then
      _index="0"
      _result="$(
        _dequote \
          "${_selection_results[${_index}]}")"
      if [[ "${_result}" != "" ]]; then
        _results+=(
          "${_result}"
        )
      fi
    fi
  elif [[ "${_selection_method}" == "random" ]]; then
    _length="${#_selection_results[@]}"
    if (( 0 < "${_length}" )); then
      _index="$(
        shuf \
          -i \
            "0-$((${_length} -1))" \
          -n \
            1)"
      _result="$(
        _dequote \
          "${_selection_results[${_index}]}")"
      if [[ "${_result}" != "" ]]; then
        _results+=(
          "${_result}"
        )
      fi
    fi
  elif [[ "${_selection_method}" == "all" ]]; then
    for _result in "${_selection_results[@]}"; do
      _result="$(
        _dequote \
          "${_result}")"
      if [[ "${_result}" != "" ]]; then
        _results+=(
          "${_result}"
        )
      fi
    done
  fi
}

_rpc_get() {
  local \
    _rpcs_string="${1}" \
    _api_key="${2}" \
    _selection_method="${3}"
  _rpc_filter_api_key \
    "${_rpcs_string}" \
    "${_api_key}"
  _select \
    "${_selection_method}" \
    "${_rpcs[@]}"
}

_explorers_get() {
  local \
    _explorers_string="${1}" \
    _selection_method="${2}" \
    _explorers=() \
    _explorer
  _explorers=( $( \
    echo \
      "${_explorers_string}" |
      jq \
        ".[].url")
  )
  _select \
    "${_selection_method}" \
    "${_explorers[@]}"
}

_db_get(){
  local \
    _db_path="${1}" \
    _input_type="${2}" \
    _output_type="${3}" \
    _selection_method="${4}" \
    _api_key="${5}" \
    _target_chain="${6}" \
    _filter \
    _result \
    _rpcs=() \
    _msg=()
  _filter_output_type="${_output_type}"
  if [[ "${_input_type}" == "id" ]]; then
    _filter_key="chainId"
    # if [[ "${_networks_all}" == "y" ]]; then
    #   _filter_value=""
    # fi
    _filter_value="${_target_chain}"
  elif [[ "${_input_type}" == "name" ]]; then
    _filter_key="name"
    _filter_value="\"${_target_chain}\""
  elif [[ "${_input_type}" == "testnet" ]]; then
    _msg=(
      "I'm not sure the schema used by"
      "the evm project by ligi includes"
      "a specific testnets classification"
      "but i think not."
    )
    echo \
      "${_msg[*]}"
  fi
  if [[ "${_output_type}" == "id" ]]; then
    _filter_output_type="chainId"
  fi
  if [[ "${_networks_all}" == "y" ]]; then
    _filter="$(
      _all_get \
        "${_filter_output_type}")"
  elif [[ "${_networks_all}" == "n" ]]; then
    _filter="$(
      _filter_get \
        "${_filter_key}" \
        "${_filter_value}" \
        "${_filter_output_type}")"
  fi
  if [[ "${quiet}" == "n" ]]; then
    _results_string="$(
      cat \
        "${_db_path}" |
        jq \
          "${_filter}")"
  elif [[ "${quiet}" == "y" ]]; then
    _results_string="$(
      cat \
        "${_db_path}" |
        jq \
          "${_filter}" 2>/dev/null || \
        true)"
  fi
  if [[ "${_results_string}" == "" ]]; then
    _msg=(
      "Found no results for"
      "'${_filter_key}' == '${_filter_value}'"
      "in database '${_db_path}'."
    )
    _msg_info \
      "${_msg[*]}"
  fi
  if [[ "${_output_type}" == "rpc" ]]; then
    _rpc_get \
      "${_results_string}" \
      "${_api_key}" \
      "${_selection_method}"
  elif [[ "${_output_type}" == "explorers" ]]; then
    _explorers_get \
      "${_results_string}" \
      "${_selection_method}"
  elif [[ "${_output_type}" == "name" ]]; then
    _result="$(
      _dequote \
        "${_results_string}")"
    if [[ "${_result}" != "" ]]; then
      _results+=(
        "${_result}"
      )
    fi
  elif [[ "${_output_type}" == "id" ]]; then
    if [[ "${_results_string}" != "" ]]; then
      _results+=( 
        "${_results_string}"
      )
    fi
  fi
}

_evm_chains_info() {
  local \
    _input_type="${1}" \
    _output_type="${2}" \
    _retrieval_mode="${3}" \
    _selection_method="${4}" \
    _api_key="${5}" \
    _networks_all="${6}" \
    _target_chain="${7}" \
    _db_paths=() \
    _result \
    _results=() \
    _db_path \
    _msg=()
  shift \
    7
  _db_paths+=(
    "$@"
  )
  _networks_total="0"
  if [[ "${_retrieval_mode}" == "offline" ]]; then
    for _db_path in "${_db_paths[@]}"; do
      _msg=(
        "Looking in '${_db_path}'."
      )
      _msg_info \
        "${_msg[*]}"
      _db_path_check \
        "${_db_path}"
      if [[ "${_input_type}" != "amount" ]]; then
        _db_get \
          "${_db_path}" \
          "${_input_type}" \
          "${_output_type}" \
          "${_selection_method}" \
          "${_api_key}" \
          "${_target_chain}"
      elif [[ "${_input_type}" == "amount" ]]; then
        _amount="$(
          cat \
            "${_db_path}" |
            jq \
              '. | length')"
        _networks_total="$((
          "${_networks_total}" + \
          "${_amount}"))"
      fi
    done
    if [[ "${_input_type}" != "amount" ]]; then
      if [[ "${#_results[@]}" == "0" ]]; then
        _msg=(
          "No results found for network"
          "'${_target_chain}'.")
        _msg_error \
          "${_msg[*]}" \
          0
      fi
      for _result in "${_results[@]}"; do
        echo \
          "${_result}"
        if [[ "${_selection_method}" != "all" ]]; then
          break
        fi
      done
    elif [[ "${_input_type}" == "amount" ]]; then
      echo \
        "${_networks_total}"
    fi
  elif [[ "${_retrieval_mode}" == "online" ]]; then
    _msg=(
      "Not implemented."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  else
    _msg=(
      "Unknown retrieval mode '${_retrieval_mode}'."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
}

_db_default_path_get() {
  local \
    _type="${1}" \
    _format \
    _lib \
    _msg=() \
    _chain \
    _chains \
    _db \
    _args=()
  shift \
    1
  _args+=(
    "$@"
  )
  if [[ "${target_chain}" != "" ]]; then
    _format="split"
  else
    _format="unified"
  fi
  if (( 0 < "${#_args[@]}" )); then
    _format="${1}"
  fi
  _chains="evm-chains/chains.json"
  _chain="evm-chains/${target_chain}.json"
  if [[ "${_type}" == "user" ]]; then
    if [[ "${_format}" == "unified" ]]; then
      _db="${HOME}/.config/${_chains}"
    elif [[ "${_format}" == "split" ]]; then
      _db="${HOME}/.config/${_chain}"
    fi
  elif [[ "${_type}" == "system" ]]; then
    _lib="$(
      _get_lib)"
    if [[ "${_format}" == "unified" ]]; then
      _db="${_lib}/${_chains}"
    elif [[ "${_format}" == "split" ]]; then
      _db="${_lib}/${_chain}"
    fi
  else
    _msg=(
      "Unknown type '${_type}'."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
  echo \
    "${_db}"
}

_db_path_auto_detect() {
  local \
    _chains \
    _db \
    _db_split \
    _db_fallback \
    _db_fallback_split \
    _type_primary \
    _type_fallback \
    _msg=()
  if [[ "${user_level}" == "y" ]]; then
    _type_primary="user"
    _type_fallback="system"
  elif [[ "${user_level}" == "n" ]]; then
    _type_primary="system"
    _type_fallback="user"
  fi
  _db="$(
    _db_default_path_get \
      "${_type_primary}" \
      "unified")"
  _db_split="$(
    _db_default_path_get \
      "${_type_primary}" \
      "split")"
  _db_fallback="$(
    _db_default_path_get \
      "${_type_fallback}" \
      "unified")"
  _db_fallback_split="$(
    _db_default_path_get \
      "${_type_fallback}" \
      "split")"
  if [[ -e "${_db_split}" ]]; then
    db_paths+=(
      "${_db_split}"
    )
  elif [[ ! -e "${_db_split}" ]]; then
    _msg=(
      "Default database '${_db_split}'"
      "not found, trying '${_db}'"
    )
    _msg_info \
      "${_msg[*]}"
  fi
  if [[ -e "${_db}" ]]; then
    db_paths+=(
      "${_db}"
    )
  elif [[ ! -e "${_db}" ]]; then
    _msg=(
      "Default database '${_db}'"
      "not found, trying '${_db_fallback_split}'"
    )
    _msg_info \
      "${_msg[*]}"
  fi
  if [[ -e "${_db_fallback_split}" ]]; then
    db_paths+=(
      "${_db_fallback_split}"
    )
  elif [[ ! -e "${_db_fallback_split}" ]]; then
    _msg=(
      "Fallback split database ${_db_fallback_split}"
      "not found, trying '${_db_fallback}'"
    )
    _msg_info \
      "${_msg[*]}"
  fi
  if [[ ! -e "${_db_fallback}" ]]; then
   _msg=(
     "Fallback database"
     "'${_db_fallback}'"
     "not found too!'"
   )
  # This will be a warning when the
  # evm-chains contract will have been
  # deployed
  _msg_error \
    "${_msg[*]}" \
    1
  fi
  if [[ -e "${_db_fallback}" ]]; then
    db_paths+=(
      "${_db_fallback}"
    )
  fi
}

_input_type_auto_detect() {
  local \
    _chain
  _chain="${target_chain}"
  _number='^[0-9]+$'
  if [[ "${_chain}" =~ ${_number} ]] ; then
    _input_type="id"
  elif [[ ! "${_chain}" =~ "${_number}" ]] ; then
    _input_type="name"
  fi
  _set_override \
    "input" \
    "type" \
    "${_input_type}"
}

_set_overrides() {
  if [[ -v override_quiet ]]; then
    quiet="${override_quiet}"
  elif [[ -z "${quiet}" ]]; then
    quiet="y"
  fi
  if [[ -v override_color ]]; then
    color="${override_color}"
  elif [[ -z "${color}" ]]; then
    color="n"
  fi
  _set_override \
    "get" \
    "date" \
    "$(_get_date_human)"
  _input_type_auto_detect
  _set_override \
    "output" \
    "type" \
    "name"
  _set_override \
    "retrieval" \
    "mode" \
    "offline"
  _set_override \
    "selection" \
    "method" \
    "kirsh"
  _set_override \
    "api" \
    "key" \
    "n"
  _set_override \
    "user" \
    "level" \
    "y"
  _set_override \
    "networks" \
    "all" \
    "n"
  _db_path_auto_detect
}

# Show help usage, with an exit status.
# $1: exit status number.
_usage() {
  local \
    _exit="${1}" \
    _usage_text
  IFS='' \
    read \
      -r \
      -d '' \
      _usage_text << \
        ENDUSAGETEXT || true
Returns info about EVM blockchains.

Usage:
  ${app_name}
    [options]
    <target_chain>

  options:
     -i <input_type>        Input type. It can be 'id' or 'name',
                            'amount'.
                            Default: '${input_type}"'
     -o <output_type>       Output type. It can be 'id', 'name',
                            'rpc', 'explorers'.
                            Default: '${output_type}'
     -m <retrieval_mode>    It can be 'offline'.
                            Default: '${retrieval_mode}'
     -u <y/n>               Whether to look for the database in
                            he user level configuration directory.
                            Default: '${user_level}'
     -d <db_path>           Path of the chains' info json file
                            to be used for 'offline' retrieval
                            mode.
                            Default: '${db_paths[*]}'
     -s <selection_method>  When output type is 'rpc', 
                            selection criterion to use when
                            more than one is available.
                            It can be 'kirsh', 'random' or
                            'all'.
                            Default: '${selection_method}'
     -k                     Whether to include, when output type
                            is 'rpc', the ones requiring an api key.
                            Default: '${api_key}'
     -a                     Whether to show results for all networks.
                            Default: '${networks_all}'

     -h                     This message.
     -c                     Enable color output
     -v                     Enable verbose output
ENDUSAGETEXT
  _printf \
    '%s\n' \
    "${_usage_text}"
  exit \
    "${_exit}"
}

# Shows configuration options.
_show_config() {
  _msg_info "${app_name} configuration"
  _msg_info "                 Get date:   ${get_date}"
  _msg_info "               Input type:   ${input_type}"
  _msg_info "              Output type:   ${output_type}"
  _msg_info "           Retrieval mode:   ${retrieval_mode}"
  _msg_info "      User-level database:   ${user_level}"
  _msg_info "                  API Key:   ${api_key}"
  _msg_info "     RPC selection method:   ${selection_method}"
  _msg_info "             All networks:   ${networks_all}"
  _msg_info "             Target chain:   ${target_chain}"
  _msg_info "           Database paths:   ${db_paths[*]}"
}

_globals
_global_variables
_requirements
# shellcheck disable=SC2034
while \
  getopts \
    'i:o:m:u:d:s:kacvh?' \
    arg; do
  case \
    "${arg}" in
    i) override_input_type="${OPTARG}" ;;
    o) override_output_type="${OPTARG}" ;;
    m) override_retrieval_mode="${OPTARG}" ;;
    u) override_user_level="${OPTARG}" ;;
    d) db_paths+=(
         "${OPTARG}"
       ) ;;
    s) override_selection_method="${OPTARG}" ;;
    k) override_api_key="y" ;;
    a) override_networks_all="y" ;;
    c) override_color="y" ;;
    v) override_quiet="n" ;;
    h|?) _set_overrides && \
         _usage \
           0 ;;
    *)
    _msg_error \
      "Invalid argument '${arg}'" \
      0
    _usage \
      1
    ;;
  esac
done
shift \
  $((
    OPTIND - 1 \
  ))
argument_required="true"
if (( ${#} < 1 )); then
  if [[ -v "override_input_type" ]]; then
    if [[ "${override_input_type}" == "amount" ]]; then
      argument_required="false"
      true
    fi
  fi
  if [[ -v "override_output_type" ]]; then
    if [[ "${override_output_type}" == "id" ]]; then
      argument_required="false"
      true
    fi
  fi
  if [[ "${argument_required}" == "true" ]]; then
    _msg=(
      "No chain identifier given."
    )
    _msg_error \
      "${_msg[*]}" \
      0
    _set_overrides
    _usage \
      1
  fi
fi
if [[ "${argument_required}" == "true" ]]; then
  target_chain="${1}"
fi
_set_overrides
_show_config
app_opts=(
  "${input_type}"
  "${output_type}"
  "${retrieval_mode}"
  "${selection_method}"
  "${api_key}"
  "${networks_all}"
  "${target_chain}"
  "${db_paths[@]}"
)
_evm_chains_info \
  "${app_opts[@]}"

# vim:set sw=2 sts=-1 et:
